{
	"include": [
		"./types/*.d.ts",
		"./src/**/*.d.ts",
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./tests/**/*.ts",
		"./tests/**/*.tsx"
	],

	"exclude": [
		"node_modules",
		"./dist/**/*"
	],

	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",

		"jsx": "react",
		"jsxFactory": "React.createElement",

		"baseUrl": ".",
		"outDir": "./dist/",
		"paths": { "*": [ "*", "src/app/Domain/*", "src/app/Assets/*", "src/app/Comps/*" ]},

		"strict": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"experimentalDecorators": true
	}
}
