{
	"private": true,
	"name": "wp-theme-scarecrow",
	"version": "0.1.0",
	"scripts": {
		"download:schema": "apollo schema:download",
		"pregenerate:queries": "yarn download:schema",
		"generate:queries": "apollo codegen:generate --target=typescript --addTypename",
		"generate:types": "webpack",
		"generate": "yarn generate:queries && yarn generate:types",
		"preanalyze:bundle": "yarn build --mode production",
		"analyze:bundle": "source-map-explorer ./dist/app.bundle.js",
		"analyze:vendor": "source-map-explorer ./dist/app.vendor.js",
		"test": "mocha-webpack --opts ./test/mocha.opts",
		"prebuild": "yarn generate",
		"build": "webpack --progress --colors",
		"preserve": "yarn generate",
		"serve": "ts-node --files ./src/app/server",
		"prebundle": "yarn build --mode production",
		"bundle": "ts-node --files ./scripts/bundle",
		"compose:up": "docker-compose up -d",
		"compose:down": "docker-compose down",
		"composer": "docker run --rm -it -v $PWD:/app composer install --ignore-platform-reqs --no-scripts"
	},
	"dependencies": {
		"apollo-cache-inmemory": "*",
		"apollo-client": "*",
		"apollo-link": "*",
		"apollo-link-http": "*",
		"graphql": "0.13.*",
		"graphql-tag": "*",
		"prop-types": "*",
		"react": "*",
		"react-apollo": "*",
		"react-dom": "*",
		"react-intl": "*",
		"react-redux": "*",
		"react-router": "*",
		"react-router-dom": "*",
		"redux": "*",
		"redux-logger": "*",
		"redux-thunk": "*"
	},
	"devDependencies": {
		"@types/archiver": "*",
		"@types/chai": "*",
		"@types/classnames": "*",
		"@types/clean-webpack-plugin": "*",
		"@types/connect-history-api-fallback": "*",
		"@types/es6-promise": "*",
		"@types/graphql": "*",
		"@types/html-webpack-plugin": "*",
		"@types/lodash": "*",
		"@types/mini-css-extract-plugin": "*",
		"@types/mocha": "*",
		"@types/node": "*",
		"@types/react": "*",
		"@types/react-dom": "*",
		"@types/react-intl": "*",
